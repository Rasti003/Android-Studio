<?xml version="1.0" encoding="utf-8"?>






<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"

  android:background="@drawable/background_color">
    tools:context="com.example.przem.animalsounds.SoundButtonActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/information_text"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"

    android:layout_below="@+id/textView"
 >

    <Button
        android:id="@+id/button_dog"
        android:layout_width="75dp"
        android:layout_height="75dp"

        android:background="@drawable/dog"
        android:layout_marginTop="10dp"
        android:onClick="popup"
        />

    <Button
        android:id="@+id/button_cow"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/cow"
        android:layout_marginTop="10dp"

        />

    <Button
        android:id="@+id/button_monkey"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/monkey"
        android:layout_marginTop="10dp"

        />

    <Button
        android:id="@+id/button_cat"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/cat"
        android:layout_marginTop="10dp"

        />

</LinearLayout>

    <Button
        android:id="@+id/button_sheep"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/sheep"
        android:layout_below="@+id/linearLayout"

        />


    <Button
        android:id="@+id/button_lion"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/lion"
        android:layout_below="@+id/linearLayout"
        android:layout_toEndOf="@+id/button_sheep" />
    <Button
        android:id="@+id/button_tiger"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/tiger"
        android:layout_below="@+id/linearLayout"
        android:layout_toEndOf="@+id/button_lion" />

    <Button
        android:id="@+id/button_wolf"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/wolf"
        android:layout_below="@+id/linearLayout"
        android:layout_toEndOf="@+id/button_tiger" />

    <Button
        android:id="@+id/button_pig"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/pig"
        android:layout_below="@+id/button_sheep"
        android:layout_alignStart="@+id/button_sheep" />


        <Button
        android:id="@+id/button_elephant"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/elephant"
        android:layout_below="@+id/button_sheep"
        android:layout_alignStart="@+id/button_lion" />

        <Button
        android:id="@+id/button_eagle"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/eagle"
        android:layout_below="@+id/button_sheep"
        android:layout_alignStart="@+id/button_tiger" />


    <Button
        android:id="@+id/button_duck"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/duck"
        android:layout_below="@+id/button_sheep"
        android:layout_alignStart="@+id/button_wolf" />



    <Button
        android:id="@+id/button_bear"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/bear"
        android:layout_below="@+id/button_pig"
        android:layout_alignStart="@+id/button_pig" />

    <Button
        android:id="@+id/button_boar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/boar"
        android:layout_below="@+id/button_elephant"
        android:layout_alignStart="@+id/button_elephant" />


    <Button
        android:id="@+id/button_crocodile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/crocodile"
        android:layout_below="@+id/button_eagle"
        android:layout_alignStart="@+id/button_eagle" />

    <Button
        android:id="@+id/button_mouse"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/mouse"
        android:layout_below="@+id/button_duck"
        android:layout_alignStart="@+id/button_duck" />





    <Button
        android:id="@+id/button_bison"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/bison"
        android:layout_below="@+id/button_bear"
        android:layout_alignStart="@+id/button_bear" />

    <Button
        android:id="@+id/button_squirrel"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/squirrel"
        android:layout_below="@+id/button_crocodile"
        android:layout_alignStart="@+id/button_crocodile" />


    <Button
        android:id="@+id/button_cock"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/cock"
        android:layout_below="@+id/button_boar"
        android:layout_alignStart="@+id/button_boar" />

    <Button
        android:id="@+id/button_deer"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/deer"
        android:layout_below="@+id/button_mouse"
        android:layout_alignStart="@+id/button_mouse" />



    <Button
        android:id="@+id/button_ActiveGame"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ActiveGame"
        android:text="GAME!"
        android:layout_above="@+id/adView"
        android:layout_alignParentEnd="true" />


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
